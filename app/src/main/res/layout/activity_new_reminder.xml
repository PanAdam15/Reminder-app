<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewReminder"
        >

    <AutoCompleteTextView
            android:hint="@string/nameOfNewActitity"
            android:layout_width="380dp"
            android:layout_height="70dp" android:id="@+id/nameOfNewActivity"
            android:background="@drawable/rounded_corner"
            android:textSize="20sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:importantForAutofill="no"
            android:inputType="textShortMessage"/>
    <TextView

            android:layout_width="350dp"
            android:layout_height="351dp" android:id="@+id/textView4"
            android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"
            android:textAlignment="viewStart" android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="35dp" android:id="@+id/switchRing"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toEndOf="@+id/AddNew"
            app:layout_constraintTop_toBottomOf="@+id/switchBluetooth" app:layout_constraintBottom_toBottomOf="@+id/AddNew"
            app:layout_constraintHorizontal_bias="0.879" app:layout_constraintVertical_bias="0.353"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp" android:id="@+id/switchBluetooth"
            android:rotationX="180"
            app:layout_constraintEnd_toEndOf="@+id/textView4" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="@+id/switchRing" app:layout_constraintTop_toTopOf="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/AddNew" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.255"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/imageButton"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAlignment="center" android:scaleX="1.5"
            android:scaleY="1.5"
            android:contentDescription="@string/bluetooth"
            app:layout_constraintEnd_toStartOf="@+id/switchBluetooth" android:layout_marginEnd="28dp"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toTopOf="@+id/AddNew"
            android:layout_marginBottom="50dp" app:layout_constraintVertical_bias="0.324"/>
    <RadioGroup
            android:layout_width="66dp"
            android:layout_height="176dp"
            android:id="@+id/radioGroupDays" android:contextClickable="true"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintBottom_toTopOf="@+id/AddNew"
            app:layout_constraintTop_toTopOf="@+id/textView4">
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxMonday" android:text="@string/mon"
                android:textColor="#FFFFFF" android:textSize="12sp"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxTuesday" android:text="@string/tue"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxWednesday" android:text="@string/wed"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxThursday" android:text="@string/thu"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxFriday" android:text="@string/fri"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxSaturday" android:text="@string/sat"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBoxSunday" android:text="@string/sun"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
    </RadioGroup>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imageView"
            android:contentDescription="@string/speaker"
            app:layout_constraintEnd_toStartOf="@+id/switchRing"
            android:layout_marginEnd="28dp" app:layout_constraintTop_toBottomOf="@+id/imageButton"
            app:layout_constraintBottom_toBottomOf="@+id/AddNew" app:layout_constraintVertical_bias="0.354"/>
    <Button

            android:layout_width="65dp"
            android:layout_height="51dp" android:id="@+id/AddNew"

            app:icon="@android:drawable/ic_input_add" android:backgroundTint="@android:color/transparent"
            android:background="@android:color/transparent"
            android:scaleX="1.5" android:scaleY="1.5"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"/>
    <Button
            android:text="Wybierz czas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/chooseTimeButton"
            app:layout_constraintTop_toTopOf="@+id/textView4"
            android:layout_marginTop="12dp" app:layout_constraintBottom_toTopOf="@+id/imageButton"
            android:layout_marginEnd="138dp" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginStart="124dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
