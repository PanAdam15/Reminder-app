<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewReminder"
        android:background="#101010" android:backgroundTint="#101010">

    <TextView
            android:text="@string/pranie"
            android:layout_width="380dp"
            android:layout_height="70dp" android:id="@+id/textView"
            android:background="@drawable/rounded_corner"
            android:textSize="50sp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="@string/time"
            android:layout_width="350dp"
            android:layout_height="351dp" android:id="@+id/textView4"
            android:background="@drawable/rounded_corner"
            android:textColor="#FFFFFF"
            android:textAlignment="viewStart"  android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="35dp" android:id="@+id/switch3"
            app:layout_constraintBottom_toTopOf="@+id/AddNew"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="193dp"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <Switch
            android:layout_width="50dp"
            android:layout_height="35dp" android:id="@+id/switch4"
            app:layout_constraintBottom_toTopOf="@+id/days"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginEnd="55dp"
            android:checked="true"/>
    <Button
            android:text="@string/data"
            android:layout_width="269dp"
            android:layout_height="47dp" android:id="@+id/button"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginBottom="270dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp" android:id="@+id/switch2"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintBottom_toTopOf="@+id/switch3"
            app:layout_constraintStart_toEndOf="@+id/imageButton" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:rotationX="180"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/imageButton"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAlignment="center" android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/days" android:contentDescription="@string/bluetooth"/>
    <RadioGroup
            android:layout_width="63dp"
            android:layout_height="176dp"
            android:id="@+id/days" android:contextClickable="true"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="220dp">
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox3" android:text="@string/mon"
                android:textColor="#FFFFFF" android:textSize="12sp"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox8" android:text="@string/tue"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox7" android:text="@string/wed"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox6" android:text="@string/thu"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox5" android:text="@string/sat"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox4" android:text="@string/tue"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
        <CheckBox
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/checkBox2" android:text="@string/sun"
                android:textSize="12sp" android:textColor="#FFFFFF"/>
    </RadioGroup>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/AddNew"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="193dp"
            app:layout_constraintStart_toEndOf="@+id/days" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:contentDescription="@string/speaker"/>
    <Button

            android:layout_width="65dp"
            android:layout_height="51dp" android:id="@+id/AddNew"
            android:background="?android:attr/selectableItemBackground"
            app:icon="@android:drawable/ic_input_add" android:backgroundTint="@android:color/transparent"
            android:scaleX="1.5" android:scaleY="1.5"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="300dp"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
