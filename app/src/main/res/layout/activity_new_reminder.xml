<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewReminder"
        android:background="#101010" android:backgroundTint="#101010">

    <TextView
            android:text="Pranie"
            android:layout_width="400dp"
            android:layout_height="70dp" android:id="@+id/textView"
            android:background="@drawable/rounded_corner"
            android:textSize="50dp" android:textStyle="bold"
            android:textAlignment="center" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Time"
            android:layout_width="350dp"
            android:layout_height="351dp" android:id="@+id/textView4"

            android:textColor="#FFFFFF"
            android:textAlignment="viewStart" android:background="#8C8484" android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="35dp" android:id="@+id/switch3"
            app:layout_constraintBottom_toTopOf="@+id/AddNew"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="193dp"
            app:layout_constraintStart_toEndOf="@+id/imageView" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <Switch
            android:layout_width="50dp"
            android:layout_height="35dp" android:id="@+id/switch4"
            app:layout_constraintBottom_toTopOf="@+id/days"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toStartOf="@+id/imageButton"
            app:layout_constraintStart_toStartOf="@+id/textView4" android:layout_marginEnd="55dp"
    />
    <Button
            android:text="Data"
            android:layout_width="269dp"
            android:layout_height="47dp" android:id="@+id/button"
            android:background="@android:color/transparent"
            android:backgroundTint="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@+id/textView4" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginBottom="270dp"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="60dp" android:id="@+id/switch2"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintBottom_toTopOf="@+id/switch3"
            app:layout_constraintStart_toEndOf="@+id/imageButton" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <ImageButton
            android:layout_width="70dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/stat_sys_data_bluetooth"
            android:backgroundTint="@android:color/transparent"
            android:id="@+id/imageButton"
            style="@style/Widget.AppCompat.Button.Borderless" android:textAlignment="center" android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/days"/>
    <RadioGroup
            android:layout_width="49dp"
            android:layout_height="176dp"
            android:id="@+id/days" android:contextClickable="true"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginEnd="220dp">
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="24dp" android:id="@+id/radioButton1" android:checked="false" tools:text="Mon"
                android:textColor="#FFFFFF" android:textSize="8sp"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton2" android:text="Tue" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton3" android:text="Wed" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton4" android:text="Thu" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton5" android:text="Fri" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton6" android:text="Sat" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
        <RadioButton
                android:layout_width="match_parent"
                android:layout_height="25dp" android:id="@+id/radioButton7" android:text="Sun" android:textSize="8sp"
                android:textColor="#FFFFFF"/>
    </RadioGroup>
    <ImageView
            android:layout_width="70dp"
            android:layout_height="35dp" app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
            android:id="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/AddNew"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="193dp"
            app:layout_constraintStart_toEndOf="@+id/days" app:layout_constraintEnd_toEndOf="@+id/textView4"/>
    <Button

            android:layout_width="65dp"
            android:layout_height="51dp" android:id="@+id/AddNew"
            android:background="?android:attr/selectableItemBackground"
            app:icon="@android:drawable/ic_input_add" android:backgroundTint="@android:color/transparent"
            android:scaleX="1.5" android:scaleY="1.5"
            style="@style/Widget.AppCompat.Button.Borderless"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/textView4" android:layout_marginTop="300dp"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            android:layout_marginBottom="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
